    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "./a.out",  // Update this to your executable name
            "args": [],
            "stopAtEntry": false,
            "cwd": "/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            //"preLaunchTask": "build",  // Update this to match the task label for building your project
            "miDebuggerPath": "gdb"  // Update this to the path of your gdb executable
            
        }
        

    ]
}